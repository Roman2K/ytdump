#!/usr/bin/env bash
set -eo pipefail

[ $# -ge 2 ] || {
  echo "usage: $(basename "$0") URL RCLONE_DEST" >&2
  exit 2
}
url=$1 ; shift
dest=$1 ; shift
root=$(dirname "$0")

done=`rclone -v lsf "$dest"`
echo "$done" | bundle exec ruby "$root"/dl.rb dl "$@" "$url"
st0=$?

rclone -v move out "$dest"
st1=$?

[ $st0 = 0 -a $st1 = 0 ]
